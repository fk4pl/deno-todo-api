{
  "tasks": {
    // Deno Özelliği #1: Permission System - Ağ ve dosya erişimi için izin sistemi
    // --allow-net: HTTP sunucusu için ağ erişimi izni
    // --allow-read: Statik dosyalar ve EJS şablonları için dosya okuma izni
    "dev": "deno run --watch --allow-net --allow-read main.ts",
    "start": "deno run --allow-net --allow-read main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@oak/oak": "jsr:@oak/oak@^17",
    "ejs": "npm:ejs@^3.1.10"
  }
}
